{
  "name": "ikea-desk-control",
  "version": "1.0.0",
  "description": "IKEA Idasen Desk Control",
  "bin": "src/index.js",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "start": "babel-node src",
    "test": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sroebert/home-connect-mqtt.git"
  },
  "author": "Steven Roebert",
  "license": "MIT",
  "dependencies": {
    "@abandonware/bluetooth-hci-socket": "^0.5.3-5",
    "@abandonware/noble": "^1.9.2-8",
    "@babel/runtime": "^7.9.6",
    "mqtt": "^3.0.0",
    "node-schedule": "^1.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2"
  }
}
